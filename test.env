# 테스트 모드 환경 변수 설정
TEST_MODE=true

# GitHub PAT 토큰 (선택사항 - MCP 서버를 테스트하려면 설정)
# GitHub Personal Access Token은 https://github.com/settings/tokens 에서 생성하세요
# GITHUB_PAT_TOKEN=your_github_personal_access_token_here

# OpenAI API 키 (채팅 기능 테스트용)
# OPENAI_API_KEY=your_openai_api_key_here

# 데이터베이스 URL (기본값: SQLite)
DATABASE_URL=sqlite:///./test_app.db

# 웹훅 시크릿 (테스트용)
GITHUB_WEBHOOK_SECRET=test_webhook_secret

# 서버 포트
SERVER_PORT=8080 